<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kasirgalabs.etumulator.navigator.CPSRStatus">
    <children>
        <Label text="N" />
        <TextField fx:id="negative" alignment="CENTER" editable="false" prefColumnCount="1" text="0">
            <HBox.margin>
                <Insets right="20.0" />
            </HBox.margin>
        </TextField>
        <Label text="Z" />
        <TextField fx:id="zero" alignment="CENTER" editable="false" prefColumnCount="1" text="0">
            <HBox.margin>
                <Insets right="20.0" />
            </HBox.margin>
        </TextField>
        <Label text="C" />
        <TextField fx:id="carry" alignment="CENTER" editable="false" prefColumnCount="1" text="0">
            <HBox.margin>
                <Insets right="20.0" />
            </HBox.margin>
        </TextField>
        <Label text="V" />
        <TextField fx:id="overflow" alignment="CENTER" editable="false" prefColumnCount="1" text="0">
            <HBox.margin>
                <Insets />
            </HBox.margin>
        </TextField>
    </children>
</HBox>
